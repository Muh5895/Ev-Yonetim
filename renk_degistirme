      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .dark {
      background-color: black;
      color: white;
    }

    .light {
      background-color: white;
      color: black;
    }

    .button:hover {
      opacity: 0.8;
    }
  </style>
