<body>
  <div class="container">
    <div class="title">Renk Değiştirme Menüsü</div>
    <button class="button" onclick="setTheme('dark')">Karanlık Tema</button>
    <button class="button" onclick="setTheme('light')">Açık Tema</button>
    <div class="menu">
      <h3>Menü:</h3>
      <p>• Işık Yönetim</p>
      <p>• Kamera</p>
      <p>• Afetler</p>
      <p>• Ayarlar</p>
    </div>
  </div>

  <script>
    function setTheme(theme) {
      if (theme === 'dark') {
        document.body.style.backgroundColor = 'black';
        document.body.style.color = 'white';
      } else if (theme === 'light') {
        document.body.style.backgroundColor = 'white';
        document.body.style.color = 'black';
      }
    }
  </script>
</body>
